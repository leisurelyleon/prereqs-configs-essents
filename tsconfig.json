{
    "compilerOptions": {
      "target": "es5", 
      "module": "commonjs",
      "lib": ["es2015", "dom"],
      "allowJs": true, 
      "checkJs": true, 
      "jsx": "react", 
      "declaration": true, 
      "sourceMap": true, 
      "outDir": "./dist",
      "rootDir": "./src",
      "removeComments": true, 
      "noImplicitAny": true, 
      "strict": true, 
      "strictNullChecks": true,
      "strictFunctionTypes": true,
      "strictPropertyInitialization": true, 
      "noImplicitThis": true, 
      "alwaysStrict": true, 
      "esModuleInterop": true, 
      "skipLibCheck": true, 
      "forceConsistentCasingInFileNames": true 
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "test"]
  }
